@model Try.Models.TourPackages

@{
    ViewData["Title"] = "Add New Package";
}

<h2>Add Tour Package</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Package Name</label>
        <input asp-for="PackageName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" class="form-control" required type="number" step="0.01" />
    </div>
    <div class="form-group">
        <label>Duration (Days)</label>
        <input asp-for="DurationDays" class="form-control" required type="number" />
    </div>
    <div class="form-group">
        <label>Start Date</label>
        <input asp-for="StartDate" class="form-control" required type="date" />
    </div>
    <div class="form-group">
        <label>End Date</label>
        <input asp-for="EndDate" class="form-control" required type="date" />
    </div>
    <div class="form-group">
        <label>Upload Image</label>
        <input asp-for="ImagePath" class="form-control" type="file" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>
