@model List<Try.Models.Feedback>

@{
    ViewData["Title"] = "Admin Feedback Control";
}
<div class="mb-3">
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-primary">🏠 Home</a>
</div>
<div class="container mt-4">
    <h2 class="text-center mb-4"> Feedbacks</h2>

    @if (Model.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Message</th>
                    <th>Submitted At</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var feedback in Model)
                {
                    <tr>
                        <td>@feedback.FeedbackID</td>
                        <td>@feedback.Message</td>
                        <td>@feedback.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <form asp-action="DeleteFeedback" asp-controller="Admin" method="post">
                                <input type="hidden" name="id" value="@feedback.FeedbackID" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted text-center">No feedback available.</p>
    }
</div>
