@model Try.Models.TourPackages

@{
    ViewData["Title"] = "Edit Tour Package";
}

<h2>Edit Tour Package</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="PackageID" />
    <input type="hidden" asp-for="ImagePath" />

    <div class="form-group">
        <label>Package Name</label>
        <input asp-for="PackageName" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" class="form-control" required type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label>Duration (Days)</label>
        <input asp-for="DurationDays" class="form-control" required type="number" />
    </div>

    <div class="form-group">
        <label>Start Date</label>
        <input asp-for="StartDate" class="form-control" required type="date" />
    </div>

    <div class="form-group">
        <label>End Date</label>
        <input asp-for="EndDate" class="form-control" required type="date" />
    </div>

    <div class="form-group">
        <label>Current Image</label><br />
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" alt="Current Image" width="150" height="100" class="mb-2" />
        }
        else
        {
            <p>No image available</p>
        }
    </div>

    <div class="form-group">
        <label>Upload New Image (Optional)</label>
        <input type="file" name="ImagePath" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="TourPackages" class="btn btn-secondary">Cancel</a>
</form>
