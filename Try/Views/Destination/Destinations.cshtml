@model IEnumerable<Try.Models.Destinations>

@{
    ViewData["Title"] = "Destinations";
}

<h2>Destinations</h2>
<div class="mb-3">
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-primary">🏠 Home</a>
</div>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Destination</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Description</th> <!-- Fixed the missing '>' -->
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Location</td>
                <td>@item.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageURL))
                    {
                        <img src="@item.ImageURL" alt="Image" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DestinationID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.DestinationID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.DestinationID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
